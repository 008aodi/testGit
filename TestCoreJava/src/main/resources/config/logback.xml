<?xml version="1.0" encoding="utf-8"?>
<!--控制台输出日志 -->
<Configuration name="Console" class="ch.qos.logback.core.ConsoleAppender">
    <appender>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} 5-5level  ---  [%21thread] %logger{35} :%m%n</pattern>
        </encoder>
    </appender>
    <!--其他日志-->
    <appender name="File" class="ch.qos.logback.core.rolling.RollingFileAppender">
      <!--配置日志生成的目录以及生成文件名的规则-->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
          <fileNamePattern>./logs/comm-%d{yyyy-MM-dd}.%i.log.zip</fileNamePattern>
          <!--如果按天来回滚，最大保留365天-->
            <maxHistory>365</maxHistory>
            <!--日志总保留量为10G-->
            <totalSizeCap>10GB</totalSizeCap>
            <timeBaseFileNamingAndTriggeringPplicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!--文件到达128M时压缩切割-->
                <maxFileSize>100 MB</maxFileSize>
            </timeBaseFileNamingAndTriggeringPplicy>
      </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
    <!--文件输出的日志格式-->
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} 5-5level  ---  [%21thread] %logger{35} :%m%n
            </pattern>
            <charset>UTF-8</charset>
        </encoder>
        <prudent>false</prudent>
    </appender>
    <logger name="org.springframework" level="ERROR"/>
    <logger name="org.apache.commons.beanutils" level="ERROR"/>
    <logger name="org.apache.http" level="ERROR"/>
    <logger name="org.mybatis.spring" level="ERROR"/>
    <logger name="com.baizhi.test" level="INFO"/>
    <root level="DEBUG">
        <appender-ref ref="File"/>
        <appender-ref ref="Console"/>
    </root>
</Configuration>
